{
  // Editor
  "editor.tabSize": 2,
  "editor.fontFamily": "'JetBrains Mono'",
  "editor.fontSize": 18,
  "editor.lineHeight": 27,
  "editor.fontWeight": "400",
  "editor.wordWrap": "on",
  "editor.mouseWheelZoom": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.formatOnPaste": true,
  "editor.inlineSuggest.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.linkedEditing": true,

  // Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": true,

  // workbench
  "workbench.editor.enablePreview": false,
  "workbench.statusBar.visible": true,
  "workbench.colorTheme": "Night Owl",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {
    "[Night Owl]": {
      "sideBar.border": "#00e1ff19"
    }
  },
  "workbench.startupEditor": "none",

  // window
  "window.menuBarVisibility": "toggle",

  // Integrated Terminal
  "terminal.integrated.tabs.location": "right",
  "terminal.integrated.fontFamily": "'JetBrains Mono'",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.defaultProfile.windows": "fish",
  "terminal.integrated.env.windows": {
    "TERM_PROGRAM": "vscode"
  },
  "terminal.integrated.env.linux": {
    "TERM_PROGRAM": "vscode"
  },
  "terminal.external.linuxExec": "fish",

  // VIM
  // Settings for vscode-neovim
  "vscode-neovim.neovimExecutablePaths.win32": "C:\\Program Files\\Neovim\\bin\\nvim.exe",
  "vscode-neovim.compositeKeys": {
    "jk": {
      // Use lua to execute any logic
      "command": "vscode-neovim.lua",
      "args": [
        [
          "local code = require('vscode')",
          "code.action('vscode-neovim.escape')",
          "code.action('workbench.action.files.save')"
        ]
      ]
    }
  },
  "vscode-neovim.ctrlKeysForNormalMode": ["r"],
  // Settings for vscodevim.vim
